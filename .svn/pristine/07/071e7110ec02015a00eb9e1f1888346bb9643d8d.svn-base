body{
	--background--
	font-family: 'Calibri', Arial, sans-serif;
	font-size: 15px;
	margin: 0;
	padding: 0;
}

a{
	color: #333;
    font-family: 'Calibri', Arial, sans-serif;
    font-size: 15px;
    line-height: 16px;
    text-shadow:0 1px 0 #fff;
    text-decoration: none;
    cursor: pointer;
}

#date{
    text-align: center;
    color: gray;
    font-size: 12px;
}

#receive{
    padding-left: 10px;
    background-image: url('../icons/midr.png');
    background-repeat: repeat-y;
    margin-left: 8px;
}

#receiveb{
    background-image: url('../icons/bottomr.png');
    background-repeat: no-repeat;
    height: 20px;
    width: 211px;
}

#receiveh{
    background-image: url('../icons/headr.png');
    background-repeat: no-repeat;
    margin-left: 8px;
    height: 17px;
    width: 203px;
}

#sent{
    padding-left: 10px;
    background-image: url('../icons/mid.png');
    background-repeat: repeat-y;
    margin-left: 135px;
    width: 203px;
}

#sentb{
    background-image: url('../icons/bottom.png');
    background-repeat: no-repeat;
    margin-left: 135px;
    height: 20px;
    width: 211px;
}

#senth{
    background-image: url('../icons/head.png');
    background-repeat: no-repeat;
    height: 17px;
    width: 203px;
    margin-left: 135px;
}

#header{
    position: fixed;
    background-image: url('--header--');
    background-repeat: repeat-x;
    height: 44px;
    width: 100%;	
    color: white;
    text-align: center;
    text-shadow:0 1px 1px #333;
    padding-top: 0px;
}

.pic{
    position: absolute;
    border-right: 1px solid black;    
}

#info img{
    position: absolute;
    margin-left: 85px;
    margin-top: -7px;
}

::-webkit-scrollbar { 
    width: 10px;
    margin: 2px 2px 2px 2px;
} 

::-webkit-scrollbar-track { 
    border-left: 1px solid black;
    background: #555555;
}

::-webkit-scrollbar-thumb { 
    min-height: 40px;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(125,126,125,1)), color-stop(100%,rgba(14,14,14,1)));
    border-radius: 4px;
    border: 1px solid black;
}