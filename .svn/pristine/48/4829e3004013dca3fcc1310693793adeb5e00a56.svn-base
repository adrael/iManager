body{
	background: #dbe2ed;
	/*background-image: url('../icons/untitled.jpg');*/
	font-family: 'Calibri', Arial, sans-serif;
	font-size: 15px;
	margin: 0;
	padding: 0;
}

a{
	color: #333;
    font-family: 'Calibri', Arial, sans-serif;
    font-size: 15px;
    line-height: 16px;
    text-shadow:0 1px 0 #fff;
    text-decoration: none;
	cursor: pointer;
}

#date{
    text-align: center;
    color: gray;
    font-size: 12px;
}

#receive{
    padding-left: 10px;
    background-image: url('../icons/midr.png');
    background-repeat: repeat-y;
    margin-left: 8px;
}

#receiveb{
    background-image: url('../icons/bottomr.png');
    background-repeat: no-repeat;
    height: 20px;
    width: 211px;
}

#receiveh{
    background-image: url('../icons/headr.png');
    background-repeat: no-repeat;
    margin-left: 8px;
    height: 17px;
    width: 203px;
}

#sent{
    padding-left: 10px;
    background-image: url('../icons/mid.png');
    background-repeat: repeat-y;
    margin-left: 135px;
    width: 203px;
}

#sentb{
    background-image: url('../icons/bottom.png');
    background-repeat: no-repeat;
    margin-left: 135px;
    height: 20px;
    width: 211px;
}

#senth{
    background-image: url('../icons/head.png');
    background-repeat: no-repeat;
    height: 17px;
    width: 203px;
    margin-left: 135px;
}

#header{
    position: fixed;
    background-image: url('../icons/header.png');
    background-repeat: repeat-x;
    height: 44px;
    width: 100%;	
    color: white;
    text-align: center;
    text-shadow:0 1px 1px #333;
    padding-top: 0px;
}

.pic{
    position: absolute;
}

#info img{
    position: absolute;
    margin-left: 85px;
    margin-top: -7px;
}

